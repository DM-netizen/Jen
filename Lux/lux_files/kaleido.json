{
    "name": "Kaleidoswirl",
    "title": "Kaleidoscopic collage",
    "images": 
    [
        {
            "type": "uimage",
            "filename": "lux_files/Ada.jpg",
            "name": "Ada"
        },
        { 
            "type": "uimage", 
            "filename": "lux_files/crab_nebula.jpg", 
            "name": "Crab Nebula"
        },
        {
            "type": "uimage",
            "filename": "lux_files/earth.jpg",
            "name": "Earth"
        },
        {
            "type": "uimage",
            "filename": "lux_files/everest.jpg",
            "name": "Everest"
        },
        {
            "type": "uimage",
            "filename": "lux_files/flower.jpg",
            "name": "Flower"
        },
        {
            "type": "uimage",
            "filename": "lux_files/forest.jpg",
            "name": "Forest"
        },
        { 
            "type": "uimage", 
            "filename": "lux_files/hk_square_512.jpg", 
            "name": "Hong Kong"
        },
        {
            "type": "uimage",
            "filename": "lux_files/lighthouse.jpg",
            "name": "Lighthouse"
        },
        {
            "type": "uimage",
            "filename": "lux_files/sunrise.jpg",
            "name": "Sunrise"
        }
    ],
    "functions":
    [
        {
            "name": "segment_slider",
            "type": "slider_float",
            "label": "Segments",
            "description": "Number of reflections in the kaleidoscope image",
            "min": 2,
            "max": 36,
            "step": 2,
            "default_value": 12
        },
        {
            "name": "offset_angle_slider",
            "type": "slider_float",
            "label": "Starting Angle",
            "description": "Rotation of image before kaleidoscope effect is applied",
            "min": -5,
            "max": 5,
            "step": 0.5,
            "default_value": 0
        },
        {
            "name": "spin_angle_slider",
            "type": "slider_float",
            "label": "Spin",
            "description": "Rotation of image after kaleidoscope effect is applied",
            "min": -5,
            "max": 5,
            "step": 0.5,
            "default_value": 0
        },
        {
            "name": "funky_menu",
            "type": "menu_int",
            "tool": "pull_down",
            "label": "Funky",
            "description": "Modify the kaleidoscope with swirl, rings, wiggles, etc.",
            "items": [ "None", "Swirl", "Rings", "Waves", "Saw", "Smoosh" ],
            "default_choice": 0,
            "affects_widget_groups": true
        },
        {
            "name": "funky_menu_0",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 0
        },        
        {
            "name": "funky_menu_1",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 1
        },        
        {
            "name": "funky_menu_2",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 2
        },
        {
            "name": "funky_menu_3",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 3
        },
        {
            "name": "funky_menu_4",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 4
        },
        {
            "name": "funky_menu_5",
            "type": "equal_int_condition",
            "a": { "functions": [ "funky_menu" ] },
            "b": 5
        },
        {
            "name": "swirl_slider",
            "type": "slider_float",
            "label": "Swirl",
            "description": "Amount of swirl in the kaleidoscope image",
            "min": -360.0,
            "max": 360.0,
            "step": 1,
            "default_value": 60.0
        },
        {
            "name": "alternate_slider",
            "type": "slider_float",
            "label": "Alternate",
            "description": "Alternate segments of the kaleidoscope image",
            "min": -180.0,
            "max": 180.0,
            "step": 1,
            "default_value": 30.0
        },
        {
            "name": "width_slider",
            "type": "slider_float",
            "label": "Width",
            "description": "Width of the rings in the kaleidoscope image",
            "min": 0.01,
            "max": 1.0,
            "step": 0.01,
            "default_value": 0.25
        },
        {
            "name": "freq_slider",
            "type": "slider_float",
            "label": "Frequency",
            "description": "Frequency of the wiggles in the kaleidoscope image",
            "min": 0.0,
            "max": 20.0,
            "step": 0.1,
            "default_value": 6.0
        },
        {
            "name": "amp_slider", 
            "type": "slider_float",
            "label": "Amplitude",
            "description": "Amplitude of the wiggles in the kaleidoscope image",
            "min": 0.0,
            "max": 30.0,
            "step": 0.1,
            "default_value": 5.0
        },
        {
            "name": "phase_slider",
            "type": "slider_float",
            "label": "Ripple",
            "description": "Change phase of the wiggles in the kaleidoscope image",
            "min": -20,
            "max": 20,
            "step": 0.5,
            "default_value": 0.0
        },
        {
            "name": "const_amp_switch",
            "type": "switch_fn",
            "label": "Constant Width",
            "description": "Constant width of the wiggles in the kaleidoscope image",
            "default_value": false
        },
        {
            "name": "offset_angle_integrator",
            "type": "integrator_float",
            "delta": { "functions": [ "offset_angle_slider" ] },
            "val": 0
        },
        {
            "name": "spin_angle_integrator",
            "type": "integrator_float",
            "delta": { "functions": [ "spin_angle_slider" ] },
            "val": 0
        },
        {
            "name": "phase_integrator",
            "type": "integrator_float",
            "delta": { "functions": [ "phase_slider" ] },
            "val": 0
        },
        {
            "name": "reflect_switch",
            "type": "switch_fn",
            "label": "Reflect",
            "description": "Reflect alternate segments of the kaleidoscope image",
            "default_value": true
        },
        {
            "name": "source_image_menu",
            "type": "menu_string",
            "tool": "image",
            "label": "Source Image",
            "description": "Choose an image to apply the transition rule to.",
            "items": [ "Ada", "Crab Nebula", "Earth", "Everest", "Flower", "Forest", "Hong Kong", "Lighthouse", "Sunrise" ],
            "default_choice": 6
        }
    ],
    "effects":
    [
        {
            "name": "position fill",
            "type": "eff_position_fill_vec2f"
        },
        { 
            "name": "radial",
            "type": "eff_radial_vec2f"
        },
        {
            "name": "cartesian",
            "type": "eff_cartesian_vec2f"
        },
        {
            "name": "kaleidoscope",
            "type": "eff_kaleidoscope_vec2f",
            "segments": { "functions": [ "segment_slider" ] },
            "offset_angle": { "functions": [ "offset_angle_integrator" ] },
            "spin_angle": { "functions": [ "spin_angle_integrator" ] },
            "reflect": { "functions": [ "reflect_switch" ] }
        },
        {
            "name": "identity",
            "type": "eff_identity"
        },
        {
            "name": "theta swirl",
            "type": "eff_theta_swirl_vec2f",
            "amount": { "functions": [ "swirl_slider" ] }
        },
        {
            "name": "theta rings",
            "type": "eff_theta_rings_vec2f",
            "width": { "functions": [ "width_slider" ] },
            "swirl": { "functions": [ "swirl_slider" ] },
            "alternate": { "functions": [ "alternate_slider" ] }
        },
        {
            "name": "theta waves",
            "type": "eff_theta_waves_vec2f",
            "freq": { "functions": [ "freq_slider" ] },
            "amp": { "functions": [ "amp_slider" ] },
            "phase": { "functions": [ "phase_integrator" ] },
            "const_amp": { "functions": [ "const_amp_switch" ] }
        },
        {
            "name": "theta saw",
            "type": "eff_theta_saw_vec2f",
            "freq": { "functions": [ "freq_slider" ] },
            "amp": { "functions": [ "amp_slider" ] },
            "phase": { "functions": [ "phase_integrator" ] },
            "const_amp": { "functions": [ "const_amp_switch" ] }
        },
        {
            "name": "theta compression waves",
            "type": "eff_theta_compression_waves_vec2f",
            "freq": { "functions": [ "freq_slider" ] },
            "amp": { "functions": [ "amp_slider" ] },
            "phase": { "functions": [ "phase_integrator" ] }
        },
        {
            "name": "funky chooser",
            "type": "eff_chooser",
            "effects": [ "identity", "theta swirl", "theta rings", "theta waves", "theta saw", "theta compression waves" ],
            "choice": { "functions": [ "funky_menu" ] }
        },
        {
            "name": "fill warp field",
            "type": "eff_fill_warp_int",
            "vf_name": "kaleido_vf"
        },
        {
            "name": "warp image",
            "type": "eff_feedback_ucolor",
            "wf_name": "warper"
        },
        {
            "name": "rgb to hsv",
            "type": "eff_rgb_to_hsv_ucolor"
        },
        {
            "name": "hsv to rgb",
            "type": "eff_hsv_to_rgb_ucolor"
        }
    ],
    "queue": 
    [
        {
            "name": "base radial field",
            "self_generated": true,
            "dim": [ 512, 512 ],
            "type": "vector_field",
            "mode": "static",
            "effects": [ "position fill", "radial" ]
        },
        {
            "name": "kaleido_vf",
            "source": "base radial field",
            "dim": [ 512, 512],
            "type": "vector_field",
            "mode": "ephemeral",  
            "effects": [ "funky chooser", "kaleidoscope", "cartesian" ]
        },
        {
            "name": "warper",
            "self_generated": true,
            "dim": [ 512, 512 ],
            "type": "warp_field",
            "mode": "ephemeral",  
            "effects": [ "fill warp field" ]
        },
        {
            "name": "warped_image",
            "source": { "functions": [ "source_image_menu" ] },
            "type": "uimage",
            "mode": "ephemeral",  
            "effects": [ "warp image" ]
        }
    ],
    "widget groups":
    [
        {
            "name": "home_group",
            "widgets": [ "source_image_menu", "segment_slider", "offset_angle_slider", "spin_angle_slider", "reflect_switch", "funky_menu" ]
        },
        {
            "name": "swirl_group",
            "conditions": [ "funky_menu_1" ],
            "widgets": [ "swirl_slider" ]
        },
        {
            "name": "rings_group",
            "conditions": [ "funky_menu_2" ],
            "widgets": [ "swirl_slider", "alternate_slider", "width_slider" ]
        },
        {
            "name": "waves_group",
            "conditions": [ "funky_menu_3" ],
            "widgets": [ "freq_slider", "amp_slider", "phase_slider", "const_amp_switch" ]
        },
        {
            "name": "saw_group",
            "conditions": [ "funky_menu_4" ],
            "widgets": [ "freq_slider", "amp_slider", "phase_slider", "const_amp_switch" ]
        },
        {
            "name": "smoosh_group",
            "conditions": [ "funky_menu_5" ],
            "widgets": [ "freq_slider", "amp_slider", "phase_slider" ]
        }
    ]
}