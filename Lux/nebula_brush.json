    "effects":
    [
        {
            "name": "sorter",
            "type": "CA_ucolor",
            "rule": 
            {
                "name": "sort",
                "type": "rule_pixel_sort_ucolor",
                "direction": "down_right",
                "max_diff": { "functions": [ "max_diff_slider" ] }
            }
        },
        {
            "name": "brush",
            "type": "cluster",
            "cluster_name": "brush_cluster"
        }
    ],
    "queue":
    [
        {
            "name": "nebula_sort",
            "source": "nebula",
            "type": "uimage",
            "mode": "iterative",  
            "effects": [ "brush", "sorter" ]
        }
    ]
