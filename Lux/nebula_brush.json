{
    "name": "diffuser_dot_scene",
    "images": 
    [ 
        { 
            "type": "uimage", 
            "filename": "nebula_files/crab_nebula.jpg", 
            "name": "nebula"
        }
    ],
    "elements":
    [
        {
            "name": "nebula_element",
            "image": "nebula",
            "scale": 0.3
        }
    ],
    "functions":
    [
        {
            "name": "brush_fn",
            "type": "position_gen_fn",
            "position": { "functions": [ "mouse_position" ] }
